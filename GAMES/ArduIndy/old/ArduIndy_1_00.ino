void InitPctBits()
{
  for (byte y = 0; y < PCT_BIT_BYTES; y++)
    pctBits[y] = 0;

  pct = 0;
}

void AddPctBits(byte x, byte y)
{
  pctBits[y] = pctBits[y] | bits[x];
}

byte CalcPct()
{
  byte calcBits = 0;
  for (byte y = 0; y < PCT_BIT_BYTES; y++)
  {
    for (byte x = 0; x < PCT_BIT_BYTES; x++)
    {
      if ((pctBits[y] & bits[x]) == bits[x])
        calcBits++;
    }
  }

  return (calcBits * 100) / 256;
}

